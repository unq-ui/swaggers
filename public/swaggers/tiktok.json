          "user": {
            "$ref": "#/components/schemas/SimpleUserDTO"
          },
          "post": {
            "$ref": "#/components/schemas/SimplePostDTO"
          },
          "text": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "user",
          "post",
          "text"
        ]
      },
      "SearchResultDTO": {
        "type": "object",
        "properties": {
